/*eslint linebreak-style: ["error", "unix"]*/
{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "requireConfigFile": false
  },
  "extends": ["airbnb-base"],
  "rules": {
    "quotes": [1, "single"],
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off",
    "linebreak-style": 0,
    "arrow-body-style": "off"
  },
  "ignorePatterns": [
    "dist/",
    "build/"
  ]
}